<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eTag.back.api.mapper.ViewMapper">


  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from view
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <select id="getViewByUserid" resultType="com.eTag.back.api.pojo.View">
      select v.*
      from view v
               left join user_view t on t.view_id = v.id
               left join user u on u.uid = t.user_id
      where u.uid = #{uid}
      order by sort
  </select>

  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.eTag.back.api.pojo.View" useGeneratedKeys="true">
    insert into view
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        `name`,
      </if>
      <if test="path != null">
        `path`,
      </if>
      <if test="component != null">
        component,
      </if>
      <if test="icon != null">
        icon,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="path != null">
        #{path,jdbcType=VARCHAR},
      </if>
      <if test="component != null">
        #{component,jdbcType=VARCHAR},
      </if>
      <if test="icon != null">
        #{icon,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.eTag.back.api.pojo.View">
    update view
    <set>
      <if test="name != null">
        `name` = #{name,jdbcType=VARCHAR},
      </if>
      <if test="path != null">
        `path` = #{path,jdbcType=VARCHAR},
      </if>
      <if test="component != null">
        component = #{component,jdbcType=VARCHAR},
      </if>
      <if test="icon != null">
        icon = #{icon,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

</mapper>